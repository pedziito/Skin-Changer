{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ğŸ“¦ Install Dependencies",
      "type": "shell",
      "command": "npm install",
      "options": {
        "cwd": "${workspaceFolder}/web/backend"
      },
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "ğŸš€ Start Server",
      "type": "shell",
      "command": "node server.js",
      "options": {
        "cwd": "${workspaceFolder}/web/backend"
      },
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*)$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Starting.*$",
          "endsPattern": "^.*running.*$|^.*listening.*$"
        }
      }
    },
    {
      "label": "ğŸ§ª Test Connection",
      "type": "shell",
      "command": "curl -s http://localhost:3000/api/health && echo 'âœ… Server running!' || echo 'âŒ Not responding'",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "ğŸŒ Open in Browser",
      "type": "shell",
      "command": "start http://localhost:3000 || xdg-open http://localhost:3000 || open http://localhost:3000",
      "presentation": {
        "reveal": "never"
      }
    },
    {
      "label": "ğŸ“Š Full Setup",
      "dependsOrder": "sequence",
      "dependsOn": [
        "ğŸ“¦ Install Dependencies",
        "ğŸš€ Start Server",
        "ğŸ§ª Test Connection"
      ]
    }
  ]
}
